<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joadtor.escam"
    android:versionCode="1"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/logo"
        android:theme="@style/Theme.main"
        android:name="V_esCam">
        <activity
            android:name="com.joadtor.escam.HomeActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.joadtor.escam.AboutActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_about"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.joadtor.escam.FileActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_file"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.joadtor.escam.PerspectiveActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_perspective"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.joadtor.escam.SaveActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_save"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.joadtor.escam.PreferencesActivity" >
        </activity>
    </application>

</manifest>